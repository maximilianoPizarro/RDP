FROM heroku/heroku:16
LABEL maintainer="maxmiliano.pizarro.5@gmail.com"
ADD start.sh /start.sh
ADD pg-restore.sh /pg-restore.sh

RUN mkdir -m 777 /imagen && \
    mkdir -m 777 /basedatos

ADD src/target/rdp-gcba.war /imagen/
ADD target/dependency/webapp-runner.jar /imagen/
ADD db/base_infraesctructura.backup /basedatos/

RUN chmod +x /pg-restore.sh  && \
    chmod +x /start.sh
    
EXPOSE 8080
CMD /start.sh 


